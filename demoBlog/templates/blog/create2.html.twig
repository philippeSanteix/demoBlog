{% extends "base.html.twig" %}

{% block title %}
    blog / creation d'un poste
{% endblock %}

{% block body %}

<h1 class="fst-italic text-center my-5">
    {% if editMode %}
        Modification 
    {% else  %}
        Creation Article
    {% endif %}

</h1>
{{ form_start(formArticle)}}

    {{ form_row(formArticle.title, {'label': "Titre de l'article"}) }}
    {{form_row(formArticle.contenu)}}
    {{form_row(formArticle.image)}}

    <button type="submit" class="btn btn-dark mb-5">

    {% if editMode %}
        Valider Modification
    {% else  %}
        Envoyer
    {% endif %}
    
    
 </button>

{{form_end(formArticle)}}

{% endblock %}